---
interface Technology {
  name: string;
  icon: string;
  description: string;
}

const technologies: Technology[] = [
  {
    name: 'Node.js',
    icon: '⚡',
    description: '高性能运行时'
  },
  {
    name: 'TypeScript',
    icon: '📘',
    description: '类型安全'
  },
  {
    name: 'Docker',
    icon: '🐳',
    description: '容器化部署'
  }
];
---

<div class="bg-gray-50 rounded-2xl p-8 mb-12">
  <h3 class="text-2xl font-bold text-gray-900 mb-6">技术栈</h3>
  <div class="grid md:grid-cols-3 gap-6">
    {technologies.map(tech => (
      <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
        <div class="text-2xl mb-3">{tech.icon}</div>
        <h4 class="font-semibold text-gray-900 mb-2">{tech.name}</h4>
        <p class="text-sm text-gray-600">{tech.description}</p>
      </div>
    ))}
  </div>
</div>