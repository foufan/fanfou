---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";

const skills = [
  { name: "前端开发", icon: "💻", description: "精通现代前端技术栈" },
  { name: "后端开发", icon: "⚙️", description: "掌握服务端开发技术" },
  { name: "用户体验", icon: "🎨", description: "注重产品设计与用户体验" },
  { name: "技术写作", icon: "✍️", description: "分享技术经验与见解" },
];

const experiences = [
  {
    year: "2023",
    title: "高级前端工程师",
    company: "Tech Company",
    description: "负责公司核心产品的前端架构设计与开发",
  },
  {
    year: "2021",
    title: "全栈开发工程师",
    company: "Startup",
    description: "参与创业公司产品从 0 到 1 的完整开发流程",
  },
];
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead
      title={`关于 - ${SITE_TITLE}`}
      description="了解更多关于我的信息"
    />
  </head>
  <body class="bg-gray-50">
    <Header />
    <main>
      <!-- Hero Section -->
      <section
        class="relative bg-gradient-to-b from-primary-50 via-white to-white overflow-hidden"
      >
        <div class="max-w-7xl mx-auto">
          <div
            class="relative z-10 pb-8 sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32"
          >
            <div
              class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28"
            >
              <div class="text-center">
                <h1
                  class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl"
                >
                  <span class="block">关于我</span>
                  <span class="block text-primary-600 mt-3"
                    >热爱技术，热爱分享</span
                  >
                </h1>
                <p class="mt-3 text-base text-gray-500">
                  一个充满热情的开发者，致力于创造优秀的用户体验和解决方案。
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">专业技能</h2>
            <p class="mt-4 text-xl text-gray-600">多年开发经验，全栈技术储备</p>
          </div>

          <div
            class="mt-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-4"
          >
            {
              skills.map((skill) => (
                <div class="bg-white rounded-2xl shadow-sm p-8 hover:shadow-lg transition-shadow duration-300">
                  <div class="text-4xl mb-4">{skill.icon}</div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {skill.name}
                  </h3>
                  <p class="text-gray-500">{skill.description}</p>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Experience Section -->
      <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">工作经历</h2>
            <p class="mt-4 text-xl text-gray-600">专业成长与项目经验</p>
          </div>

          <div class="mt-12 space-y-8">
            {
              experiences.map((exp) => (
                <div class="bg-gray-50 rounded-2xl p-8 hover:bg-gray-100 transition-colors duration-300">
                  <div class="flex items-center justify-between flex-wrap gap-4">
                    <div>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                        {exp.year}
                      </span>
                      <h3 class="mt-4 text-xl font-semibold text-gray-900">
                        {exp.title}
                      </h3>
                      <p class="mt-2 text-gray-600">{exp.company}</p>
                    </div>
                    <p class="text-gray-500 mt-4 lg:mt-0">{exp.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="py-12 bg-primary-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl font-extrabold text-gray-900">联系我</h2>
          <p class="mt-4 text-xl text-gray-600">
            有任何问题或合作意向，欢迎随时联系
          </p>
          <div class="mt-8 flex justify-center">
            <a
              href="mailto:contact@example.com"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors duration-300"
            >
              发送邮件
            </a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
