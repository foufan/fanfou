---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";

const skills = [
  {
    name: "前端开发",
    icon: "💻",
    description: "为用户提供流畅、直观的前端体验，注重细节与交互设计。",
  },
  {
    name: "后端开发",
    icon: "⚙️",
    description: "设计并构建高效、稳定的后端系统，确保数据和服务的高可用性。",
  },
  {
    name: "全栈开发",
    icon: "🚀",
    description: "独立推动前端到后端的全栈开发，提供从需求分析到上线的全方位技术支持。",
  },
  {
    name: "小程序开发",
    icon: "📱",
    description: "开发高效、流畅的跨平台小程序，提供无缝的用户体验。",
  },
];

const experiences = [
  {
    year: "2019-至今",
    title: "资深开发工程师",
    company: "某科技公司",
    description:
      "主导和参与多个关键项目，专注于提升系统性能和优化用户体验，积累了全栈开发及跨团队协作的宝贵经验。",
  },
  {
    year: "2016-2019",
    title: "全栈开发工程师",
    company: "某行业公司",
    description:
      "参与多项目开发，优化技术架构和业务流程，致力于提升系统的稳定性与性能。",
  },
];
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead
      title={`关于 - ${SITE_TITLE}`}
      description="了解更多关于我的信息，专业全栈开发，助力您的项目成功。"
    />
  </head>
  <body class="bg-gray-50">
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="relative py-20 bg-gradient-to-b from-primary-50 via-white to-white overflow-hidden">
        <div class="absolute inset-0">
          <div class="absolute inset-0 bg-grid-slate-900/[0.04] bg-[size:32px_32px]"></div>
        </div>
        <div class="relative container mx-auto px-4">
          <div class="max-w-3xl mx-auto text-center">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800 mb-6">
              关于我
            </span>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
              专注全栈开发，助力您的项目成功
            </h1>
            <p class="text-xl text-gray-600">
              多年全栈开发经验，助您从零到一，快速实现业务目标。
            </p>
          </div>
        </div>
      </section>

      <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">我的专业技能</h2>
            <p class="mt-4 text-xl text-gray-600">
              精通全栈开发，覆盖前端、后端以及跨平台开发，帮助您从构思到交付无缝实现。
            </p>
          </div>
          <div class="mt-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
            {
              skills.map((skill, index) => (
                <div class={`bg-white rounded-2xl shadow-sm p-8 transition-all duration-300 ease-in-out transform hover:scale-105 hover:border-4 hover:border-primary-600 hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-primary-500 focus:border-primary-600 cursor-pointer`}>
                  <div class="text-4xl mb-4">{skill.icon}</div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {skill.name}
                  </h3>
                  <p class="text-gray-500">{skill.description}</p>
                </div>
              ))
            }
          </div>
        </div>
      </section>
      
      

      <!-- Experience Section -->
      <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">工作经历</h2>
            <p class="mt-4 text-xl text-gray-600">
              丰富的项目经验，助力产品从0到1，跨团队协作，确保项目成功交付。
            </p>
          </div>
          <div class="mt-12 space-y-8">
            {
              experiences.map((exp) => (
                <div class="bg-gray-50 rounded-2xl p-8 hover:bg-gray-100 transition-colors duration-300">
                  <div class="flex items-center justify-between flex-wrap gap-4">
                    <div>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                        {exp.year}
                      </span>
                      <h3 class="mt-4 text-xl font-semibold text-gray-900">
                        {exp.title}
                      </h3>
                      <p class="mt-2 text-gray-600">{exp.company}</p>
                    </div>
                    <p class="text-gray-500 mt-4 lg:mt-0">{exp.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="py-12 bg-primary-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl font-extrabold text-gray-900">联系我，共同实现项目成功</h2>
          <p class="mt-4 text-xl text-gray-600">
            随时与我联系，携手推进您的项目，让技术为您创造更大价值！
          </p>
          <div class="mt-8 flex justify-center">
            <a href="mailto:openwj@hotmail.com" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors duration-300">
              立即联系
            </a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
